@page
@model School.Pages.Student.EditModel
@{
}
 
@if (Model.IsSuccess)
{
    <p>
        You Created: @Model.FirstName @Model.LastName
    </p>
}
else
{
    <form method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="FirstName">First Name:</label><br />
            <input asp-for="FirstName" class="form-control" /><br />
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name:</label><br />
            <input asp-for="LastName" class="form-control" /><br />
        </div>
        <input asp-for="StudentId" type="hidden" />
        <div class="form-group">
            <button class="btn btn-primary">Submit</button>
        </div>
    </form>
}
